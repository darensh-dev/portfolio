---
import '../styles/global.css';
export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Desarrollador Full Stack - Portafolio Espacial",
  description = "Portafolio de desarrollador full stack con más de 6 años de experiencia, explorando el universo del código."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" data-theme="space">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
  </head>
  <body>
    <slot />
  </body>
</html>
